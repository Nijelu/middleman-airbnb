<% flat = data.flats[owner] %>


<div id="show">
  <div class="banner" style="background-image: linear-gradient(-225deg,rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.2) 50%), url('https://kitt.lewagon.com/placeholder/cities/<%= flat.city_slug %>')"></div>
  <div class="wrapper-content">
    <div id="show-content" class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-6 col-sm-offset-1">
          <div class="content">
            <div class="profil">
              <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle" %>
              <p><%= owner.capitalize %></p>
            </div>
            <div class="details">
              <h1><%= flat.description %></h1>
              <p><%= flat.city_name %></p>
              <p class="rating">
                <% 5.times do |i| %>
                <% if flat.rating >= i + 1 %>
                <i class="fa fa-star on"></i>
                <% else %>
                <i class="fa fa-star off"></i>
                <% end %>
                <% end %>
              </p>
            </div>
          </div>
        </div>
        <div class="col-xs-12 col-sm-4 form">
          <h4 class="text-center">Book this flat</h4>
          <form action="">
            <div class="form-group">
              <div class="row">
                <div class="col-xs-6">
                  <input type="text" class="form-control" placeholder="checkin">
                </div>
                <div class="col-xs-6">
                  <input type="text" class="form-control" placeholder="checkout">
                </div>
              </div>
            </div>
            <div class="form-group">
              <select name="" id="guests" class="form-control">
                <option value="1">1 guest</option>
                <option value="2">2 guest</option>
                <option value="3">3 guest</option>
              </select>
            </div>
            <input type="submit" class="btn btn-danger" value="Book it">
          </form>
        </div>
      </div>


    </div>

  </div>
  <div class="text-center">
    <% if flat.wifi == true %>
    <%= 'hello' %>
    <i class="fa fa-wifi on"></i>
    <% else %>
    <i class="fa fa-wifi off"></i>
    <% end %>
  </div>

</div>

